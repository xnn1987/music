<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/all_background"
    android:padding="5dp" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbarThumbVertical="@drawable/public_scrollbar_handle_vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/inner_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <EditText
                    android:id="@+id/tv_nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/line1"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="张某"
                    android:textColor="@color/text_value_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@+id/line1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="昵       称："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line2"
                    style="@style/line_br"
                    android:layout_below="@+id/tv_nickname" />

                <RelativeLayout
                    android:id="@+id/rlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/line2"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="@drawable/selector_public_form_color_middle" >

                    <Button
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/selector_public_btn_switch" />
                </RelativeLayout>

                <View
                    android:id="@+id/line3"
                    style="@style/line_br"
                    android:layout_below="@+id/rlayout" />

                <EditText
                    android:id="@+id/tv_birthday"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/line3"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:ems="10"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="1990-1-1"
                    android:textColor="@color/text_value_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@+id/line3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="生       日："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line4"
                    style="@style/line_br"
                    android:layout_below="@+id/tv_birthday" />

                <EditText
                    android:id="@+id/tv_phonenum"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/line4"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:ems="11"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="上海浦东"
                    android:textColor="@color/text_value_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@+id/line4"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="所 在 地 ："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line5"
                    style="@style/line_br"
                    android:layout_below="@+id/tv_phonenum" />

                <EditText
                    android:id="@+id/tv_email"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/line5"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="left|top"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="要有梦想，即使遥远。成功绝非偶然，当思考成为习惯，成功将不期而至！"
                    android:textColor="@color/text_value_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@+id/line5"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="签       名："
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/rlayout"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="性       别："
                    android:textColor="@color/text_color"
                    android:textSize="14.0dip" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:text="已输入6个字，还可输入200字"
                android:textColor="@color/text_color" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal" >

                <EditText
                    android:id="@+id/e1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/e2"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:ems="10"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="张三"
                    android:textColor="@color/text_value_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="姓       名："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line1"
                    style="@style/line_br"
                    android:layout_below="@+id/e1" />

                <EditText
                    android:id="@+id/e2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/b3"
                    android:layout_below="@+id/line1"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="20"
                    android:textColor="@color/text_value_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/e1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="年       龄："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line2"
                    style="@style/line_br"
                    android:layout_below="@+id/e2" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/b4"
                    android:layout_below="@+id/line2"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="1380013800"
                    android:textColor="@color/text_value_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/e2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="电       话："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line3"
                    style="@style/line_br"
                    android:layout_below="@+id/b3" />

                <Button
                    android:id="@+id/b4"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/e5"
                    android:layout_below="@+id/line3"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="8008000"
                    android:textColor="@color/text_value_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Q         Q："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line4"
                    style="@style/line_br"
                    android:layout_below="@+id/b4" />

                <EditText
                    android:id="@+id/e5"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/b6"
                    android:layout_below="@+id/line4"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="212345678@qq.com"
                    android:textColor="@color/text_value_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line4"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="邮       箱："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line5"
                    style="@style/line_br"
                    android:layout_below="@+id/e5" />

                <Button
                    android:id="@+id/b6"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line5"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="上海市xx区xx弄xx楼xx室"
                    android:textColor="@color/text_value_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line5"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="地       址："
                    android:textColor="@color/text_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/selector_public_form_color_middle" >

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@color/transparent"
                    android:divider="#cbcbcb"
                    android:dividerHeight="0.5px"
                    android:fadingEdge="none"
                    android:scrollbarThumbVertical="@drawable/public_scrollbar_handle_vertical" />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_xiugai"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_email"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_public_btn_bg_yellow"
                android:text="保     存"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>