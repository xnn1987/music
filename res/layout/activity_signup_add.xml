<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/all_background" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbarThumbVertical="@drawable/public_scrollbar_handle_vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_default_bg" />

                <Button
                    android:id="@+id/load"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/selector_public_btn_bg_yellow"
                    android:text="上 传 视 频"
                    android:textColor="@color/text_btn_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/e1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/e2"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:ems="10"
                    android:gravity="center_vertical|right"
                    android:hint="*"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_value_color"
                    android:textColorHint="@color/text_input_hint_color"
                    android:textSize="14sp" >
                </EditText>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="姓       名："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line1"
                    style="@style/line_br"
                    android:layout_below="@+id/e1" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/e1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="年       龄："
                    android:textColor="@color/text_color" />

                <EditText
                    android:id="@+id/e2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/b3"
                    android:layout_below="@+id/line1"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:hint="*"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_value_color"
                    android:textColorHint="@color/text_input_hint_color"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/line2"
                    style="@style/line_br"
                    android:layout_below="@+id/e2" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/e2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="性       别："
                    android:textColor="@color/text_color" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/b4"
                    android:layout_below="@+id/line2"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#7b7b7b"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/line3"
                    style="@style/line_br"
                    android:layout_below="@+id/b3" />

                <Button
                    android:id="@+id/b4"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/e5"
                    android:layout_below="@+id/line3"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:hint="*"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_input_hint_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="电       话："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line4"
                    style="@style/line_br"
                    android:layout_below="@+id/b4" />

                <EditText
                    android:id="@+id/e5"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/b6"
                    android:layout_below="@+id/line4"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:hint="*"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_value_color"
                    android:textColorHint="@color/text_input_hint_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line4"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="邮       箱："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line5"
                    style="@style/line_br"
                    android:layout_below="@+id/e5" />

                <Button
                    android:id="@+id/b6"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/e7"
                    android:layout_below="@+id/line5"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#7b7b7b"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line5"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="QQ      号："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line6"
                    style="@style/line_br"
                    android:layout_below="@+id/b6" />

                <EditText
                    android:id="@+id/e7"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line6"
                    android:layout_toRightOf="@+id/textView7"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:ems="10"
                    android:gravity="center_vertical|right"
                    android:hint="*"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_value_color"
                    android:textColorHint="@color/text_input_hint_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/b6"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="地        址："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line7"
                    style="@style/line_br"
                    android:layout_below="@+id/e7" />

                <EditText
                    android:id="@+id/e8"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/e9"
                    android:layout_below="@+id/line7"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:ems="10"
                    android:gravity="center_vertical|right"
                    android:hint="*"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_value_color"
                    android:textColorHint="@color/text_input_hint_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/e7"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="推荐琴行："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line8"
                    style="@style/line_br"
                    android:layout_below="@+id/e8" />

                <EditText
                    android:id="@+id/e9"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line8"
                    android:layout_toRightOf="@+id/textView9"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:ems="10"
                    android:gravity="center_vertical|right"
                    android:hint="*"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_value_color"
                    android:textColorHint="@color/text_input_hint_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/e8"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="老师电话："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line9"
                    style="@style/line_br"
                    android:layout_below="@+id/e9" />

                <EditText
                    android:id="@+id/e10"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/e9"
                    android:layout_below="@+id/line9"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:ems="10"
                    android:gravity="center_vertical|right"
                    android:hint="*"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_value_color"
                    android:textColorHint="@color/text_input_hint_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/e9"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="参赛曲目："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line10"
                    style="@style/line_br"
                    android:layout_below="@+id/e10" />

                <Button
                    android:id="@+id/b11"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/e10"
                    android:layout_below="@+id/line10"
                    android:background="@drawable/selector_public_btn_bg_yellow"
                    android:ems="10"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:text="青年组"
                    android:textColor="@color/text_value_color"
                    android:textColorHint="@color/text_input_hint_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/e10"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="报名组别："
                    android:textColor="@color/text_color" />

                <View
                    android:id="@+id/line11"
                    style="@style/line_br"
                    android:layout_below="@+id/b11" />

                <EditText
                    android:id="@+id/e12"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line11"
                    android:layout_toRightOf="@+id/textView12"
                    android:background="@drawable/selector_public_form_color_middle"
                    android:ems="10"
                    android:gravity="center_vertical|right"
                    android:hint="*"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_value_color"
                    android:textColorHint="@color/text_input_hint_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/b11"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="支付金额："
                    android:textColor="@color/text_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/e12"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btnOk1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/selector_public_btn_bg_yellow"
                        android:text="支  付"
                        android:textColor="@color/text_btn_color" />

                    <View
                        android:layout_width="0.1px"
                        android:layout_height="30.0dip"
                        android:background="@drawable/pic_xline" />

                    <Button
                        android:id="@+id/btnOk2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/selector_public_btn_bg_yellow"
                        android:text="保  存"
                        android:textColor="@color/text_btn_color" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>